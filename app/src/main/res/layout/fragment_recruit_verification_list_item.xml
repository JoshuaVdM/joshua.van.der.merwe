<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/img_recruit"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_black" />

    <TextView
        android:id="@+id/txt_recruit_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Joshua Van der Merwe"
        app:layout_constraintBottom_toBottomOf="@+id/img_recruit"
        app:layout_constraintEnd_toStartOf="@+id/btn_decline"
        app:layout_constraintStart_toEndOf="@+id/img_recruit"
        app:layout_constraintTop_toTopOf="@+id/img_recruit" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/profile_accept_verification"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_decline"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_decline_verification"
        app:layout_constraintBottom_toBottomOf="@+id/txt_recruit_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_accept"
        app:layout_constraintTop_toTopOf="@+id/txt_recruit_name" />

</android.support.constraint.ConstraintLayout>